  <!-- Fix para error 1042 -->
  <script>window.addEventListener("error", function(e) { console.error("Capturado:", e.message); });</script>
  <!-- Script para diagnóstico y recuperación ante errores -->
  <script>
    // Verificar que el contenedor root tenga contenido
    setTimeout(function() {
      const root = document.getElementById('root');
      if (root && (!root.hasChildNodes() || root.children.length === 0)) {
        console.warn('Aplicación React no se ha inicializado correctamente, intentando recuperar...');
        window.location.reload(true);
      }
    }, 5000);
  </script>
